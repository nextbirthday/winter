<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
	<Properties>
		<Property name="fileName">server</Property>
	</Properties>
	<Appenders>
		<Console name="consoleAppender" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %c %-5p [ %l ] %m%n"
				disableAnsi="false" />
		</Console>
		<RollingFile name="serverAppender"
			fileName="logs/${fileName}.log"
			filePattern="logs/%d{yyyy-MM-dd}-%i-${fileName}.log" append="true"
			createOnDemand="true">
			<PatternLayout
				pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %c %-5p [ %l ] %m%n" />
			<Policies>
				<TimeBasedTriggeringPolicy />
				<SizeBasedTriggeringPolicy size="1 MB" />
			</Policies>
		</RollingFile>
	</Appenders>
	<Loggers>
		<Root level="INFO">
			<AppenderRef ref="consoleAppender" />
		</Root>
		<Logger name="logger" level="DEBUG" additivity="false">
			<AppenderRef ref="consoleAppender" />
		</Logger>
		<Logger name="talk-server" level="TRACE" additivity="false">
			<AppenderRef ref="consoleAppender" />
			<AppenderRef ref="serverAppender" />
		</Logger>
		<Logger name="product" level="TRACE" additivity="false">
			<AppenderRef ref="consoleAppender" />
		</Logger>
	</Loggers>
</Configuration>